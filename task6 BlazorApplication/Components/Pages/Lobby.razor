@page "/"
@rendermode InteractiveServer

@inject NavigationManager Nav
@inject GameService GameService

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg">
                <div class="card-body text-center">

                    <h2 class="mb-4">
                        <i class="bi bi-joystick"></i>
                        Tic Tac Toe Lobby
                    </h2>

                    <div class="d-grid gap-3">

                        <button class="btn btn-success btn-lg"
                                @onclick="CreateLobby">
                            <i class="bi bi-plus-circle"></i>
                            Create game
                        </button>

                        <button class="btn btn-outline-primary btn-lg"
                                @onclick="ToggleJoinMenu">
                            <i class="bi bi-people"></i>
                            Join
                        </button>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@if (showJoinMenu)
{
    <div class="modal fade show d-block" tabindex="-1"
         style="background:rgba(0,0,0,0.4);">

        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-hourglass-split"></i>
                        Waiting
                    </h5>
                    <button type="button"
                            class="btn-close"
                            @onclick="ToggleJoinMenu"></button>
                </div>

                <div class="modal-body">

                    @if (waitingRooms.Count == 0)
                    {
                        <p class="text-muted text-center">
                            No games available
                        </p>
                    }
                    else
                    {
                        <ul class="list-group">

                            @foreach (var room in waitingRooms)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">

                                    <span>
                                        <i class="bi bi-controller"></i>
                                        Room: <strong>@room.Id[..6]</strong>
                                    </span>

                                    <button class="btn btn-primary btn-sm"
                                            @onclick="() => JoinRoom(room.Id)">
                                        Enter
                                    </button>

                                </li>
                            }

                        </ul>
                    }

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary"
                            @onclick="ToggleJoinMenu">
                        Close
                    </button>
                </div>

            </div>
        </div>
    </div>
}

@code {
    void CreateLobby()
    {
        var id = Guid.NewGuid().ToString();

        GameService.Rooms[id] = new GameRoom
        {
            Id = id
        };

        Nav.NavigateTo("/game/" + id);
    }

    bool showJoinMenu = false;
    List<GameRoom> waitingRooms = new();
    System.Timers.Timer? timer;

    void ToggleJoinMenu()
    {
        showJoinMenu = !showJoinMenu;

        if (showJoinMenu)
        {
            LoadRooms();

            timer = new System.Timers.Timer(500);
            timer.Elapsed += (_, __) =>
            {
                LoadRooms();
                InvokeAsync(StateHasChanged);
            };
            timer.Start();
        }
        else
        {
            timer?.Stop();
            timer?.Dispose();
        }
    }

    void LoadRooms()
    {
        waitingRooms = GameService.GetWaitingRooms();
    }

    void JoinRoom(string id)
    {
        Nav.NavigateTo("/game/" + id);
    }
}